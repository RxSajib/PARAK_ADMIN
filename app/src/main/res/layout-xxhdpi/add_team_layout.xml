<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/ImageBox"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_centerHorizontal="true"
        android:layout_width="@dimen/_80sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_height="@dimen/_80sdp">

        <ProgressBar
            android:id="@+id/ImageUploadingProgress"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:elevation="0.2dp"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp">

        </ProgressBar>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/PickImage"
            android:background="@drawable/image_placeholder"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        </de.hdodenhof.circleimageview.CircleImageView>
    </RelativeLayout>


    <EditText
        android:id="@+id/PickName"
        android:layout_below="@+id/ImageBox"
        android:layout_marginTop="@dimen/_10sdp"
        android:padding="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_25sdp"
        android:singleLine="true"
        android:inputType="text"
        android:background="@drawable/edittext_boz"
        android:layout_marginRight="@dimen/_25sdp"
        android:hint="Name of member"
        android:textSize="@dimen/_15sdp"
        android:fontFamily="@font/ubuntureguiar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </EditText>

    <EditText
        android:id="@+id/PickDesignation"
        android:layout_below="@+id/PickName"
        android:layout_marginTop="@dimen/_10sdp"
        android:padding="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_25sdp"
        android:inputType="text"
        android:background="@drawable/edittext_boz"
        android:layout_marginRight="@dimen/_25sdp"
        android:hint="Designation"
        android:textSize="@dimen/_15sdp"
        android:fontFamily="@font/ubuntureguiar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </EditText>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/PickDesignation"
        android:layout_marginRight="@dimen/_25sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_25sdp"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/CancelButtonID"
            android:backgroundTint="@color/carbon_pink_400"
            android:layout_width="wrap_content"
            android:text="Cancel"
            android:layout_alignParentLeft="true"
            android:layout_height="wrap_content">

        </Button>

        <Button
            android:id="@+id/UpdateButtonID"
            android:backgroundTint="@color/carbon_teal_400"
            android:layout_width="wrap_content"
            android:text="Update"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content">

        </Button>

    </RelativeLayout>


</RelativeLayout>